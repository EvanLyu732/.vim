"
" @Author: EvanLyu732
"
" @Location:  $HOME/.vim/ 
"
syntax on

" encoding 
set encoding=utf8

" basic setting
set ma
set ai
set si
set wrap
set title
set rnu
set smartcase
set ruler
set noswapfile
set noerrorbells
set novisualbell
set tabstop=4

" searching 
set hlsearch
set incsearch
set ignorecase

" menu
set wildmenu
set wildignorecase

" navigation 
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l

" colorscheme
colo monokai

  
